header.page-header
	.page-header--dark-purple
		.container
			.row
				.col-xs-12.col-md-6.col-xl-4
					span.page-header__email
						svg(width='18', height='12')
							use(xlink:href='#envelope')
						|info@tripway.com
					span.page-header__phone
						svg(width='14', height='12')
							use(xlink:href='#phone')
						|+321 233 4567
				.col-xs-12.col-md-4.col-xl-4
					.social-links
						a(href='#').social-links__item
							svg(width='7', height='15')
								use(xlink:href='#facebook')
						a(href='#').social-links__item
							svg(width='12', height='15')
								use(xlink:href='#pinterest')
						a(href='#').social-links__item
							svg(width='16', height='13')
								use(xlink:href='#twitter')
						a(href='#').social-links__item
							svg(width='16', height='14')
								use(xlink:href='#vimeo')
						a(href='#').social-links__item
							svg(width='15', height='15')
								use(xlink:href='#instagram')
						a(href='#').social-links__item
							svg(width='16', height='15')
								use(xlink:href='#google')
	.page-header--purple
		.container
			.row
				.col-xs-12.col-md-3.col-xl-2
					a.page-header__brand(href="#")
						img(src="svg/icon_logo.svg", width='36', height='36')
						span TripWay
				.col-xs-12.col-md-9.col-xl-7
					.main-nav__wrapper
						a(href='')#toggler.toggler
							span
						nav.main-nav
							ul.main-nav__list
								li.main-nav__item: a(href="#").main-nav__link Home
								li.main-nav__item.main-nav__item--has-children
									a(href="#").main-nav__link About
										svg(width='8', height='4')
											use(xlink:href="#arrow-down")
									ul.main-nav__nested-list
										li.main-nav__nested-item: a(href="#") 	Testimonial
										li.main-nav__nested-item: a(href="#") FAQ
								li.main-nav__item: a(href="#").main-nav__link 	Destinations
								li.main-nav__item.main-nav__item--has-children
									a(href="#").main-nav__link.main-nav__link--has-children Gallery
										svg(width='8', height='4')
											use(xlink:href="#arrow-down")
									ul.main-nav__nested-list
										li.main-nav__nested-item: a(href="#") 	Europe
										li.main-nav__nested-item: a(href="#") 	Africa
										li.main-nav__nested-item: a(href="#") 	North America
										li.main-nav__nested-item: a(href="#") 	South America
										li.main-nav__nested-item: a(href="#") 	Australia
								li.main-nav__item: a(href="#").main-nav__link 	Blog
								li.main-nav__item: a(href="#").main-nav__link Contacts



