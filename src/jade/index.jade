doctype html
html(lang="ru").no-js
	include components/head
	body
		//Header
		include components/header
		//
			Main
		main
			include components/slider
			//
				Services
			include components/services
			.promo-line.promo-line--purple
				.container
					.row.promo-line__info
						p.promo-line__text Need useful advice? You're in the right place!
						a.btn.btn--md.sr-btn.sr-delay-015 Contact Us For This
			//
				Popular destinations
			include components/popular
			.promo-line
				.container
					.row.promo-line__info
						p.promo-line__text Love discounts? Subscribe to newsletter!
						form.subscription
							.field__wrapper
								input(type="text", placeholder="Your email").field.field--medium
								span.field__underline.field__underline--medium
							input(type="submit" value="Subscribe").btn.btn--md.btn--white
			//
				Reviews
			include components/reviews
		//
			Footer
		include components/footer

		script(type="text/javascript", src="js/vendor/vendor-bundle.min.js")
		script(type='text/javascript', src=' http://code.jquery.com/jquery-migrate-1.3.0.min.js')
		script(type="text/javascript", src='js/custom/custom-bundle.js')